		<script type="text/javascript">
			// click handler function
			function clickHandler1(event) {
				var msg =
					'ClickHandler1: click triggered by ' +
					event.target.id +
					' at location ' +
					event.clientX +
					',' +
					event.clientY;
				document.getElementById('message').innerHTML = msg;
			}

			window.addEventListener("load", function(event) {
                
            // Click handler function
                function message(event) {
                var msg = "ClickHandler1: click triggered by " + event.target.id + " at location " + event.clientX + "," + event.clientY;
              document.getElementById("message2").innerHTML = msg;
           }
                
               // click handler function
                function message1(event) {
                 var msg = "ClickHandler2: click triggered by " + event.target.id + " at location " + event.clientX + "," + event.clientY;
                  document.getElementById("message2").innerHTML = msg;
                }

             document.getElementById(
                   "message").onclick = message;
              document.getElementById(
                   "message1").onclick = message1;
           });
            
            
          function mouseOver(){
document.getElementById("message").style.backgroundColor = "pink";
  document.getElementById("message1").style.backgroundColor = "white";
  document.getElementById("message").style.color = "blue";
        document.getElementById("message1").style.color = "blue";
          }

function mouseOut() {
  document.getElementById("message").style.backgroundColor = "white";
  document.getElementById("message1").style.backgroundColor = "lightblue";
  document.getElementById("message").style.color = "blue";
  document.getElementById("message1").style.color = "blue";
}

window.onload
</script>

